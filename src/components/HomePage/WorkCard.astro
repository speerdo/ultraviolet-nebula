---
const { project } = Astro.props;
---

<div class="project-card">
  <div class="image-wrapper">
    <a href={project.link}>
      <div class="image-container" style={`background-image: url(${project.image})`}>
      </div>
      <div class="image-overlay"></div>
    </a>
  </div>
  
  <div class="card-content">
    <h3>
      <a
        href={project.link}
        class="project-title"
      >
        {project.title}
      </a>
    </h3>    
    <a
      href={project.link}
      class="project-link"
    >
      View Project â†’
    </a>
  </div>
</div>

<style>
  .project-card .card-content .project-link {
    font-size: 1.2rem;
  } 

  .project-card .card-content .project-title {
    font-size: 2.2rem;
  } 


  .project-card {
    @apply w-80 rounded-lg shadow-lg overflow-hidden bg-gray-900;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .project-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.3);
  }

  .image-wrapper {
    @apply relative overflow-hidden;
    height: 280px;
  }

  .image-container {
    @apply absolute inset-0 w-full h-full bg-cover bg-top;
    transition: transform 0.3s ease;
  }

  .image-overlay {
    @apply absolute inset-0 bg-black bg-opacity-20;
    transition: all 0.3s ease;
  }

  .project-card:hover .image-wrapper > * {
    transform: scale(1.05);
  }

  .project-card:hover .image-overlay {
    @apply bg-opacity-30;
  }
  
  .card-content {
    @apply flex flex-col justify-between;
    padding: 2rem 1.5rem;
  }

  .project-title {
    @apply text-4xl font-bold mb-4 text-white;
  }

  .project-link {
    @apply text-purple-400 hover:text-purple-300 transition-colors duration-200 text-sm;
  }

  .projects-grid {
    @apply grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-7xl mx-auto justify-items-center;
  }
</style>
