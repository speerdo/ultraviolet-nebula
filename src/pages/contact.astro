---
import Layout from '../layouts/Contact.astro';
---

<Layout
	title="Contact Me"
	description="Get in touch with me"
	heroImage="/images/adamspeer_og.png"
>
	<div class="contact-container">
		<div class="contact-info">
			<h2 class="contact-info-title">Contact Information</h2>
			<ul>
				<li>
					<strong>Email:</strong>
					<a href="mailto:adamspeer@gmail.com">adamspeer@gmail.com</a>
				</li>
				<li>
					<strong>LinkedIn:</strong>
					<a href="https://linkedin.com/in/adam-speer/" target="_blank" rel="noopener noreferrer">
						linkedin.com/in/adam-speer/
					</a>
				</li>
				<li>
					<strong>Location:</strong>
					<span>Indianapolis, IN</span>
				</li>
			</ul>
		</div>

		<form class="contact-form" action="https://api.web3forms.com/submit" method="POST" aria-label="Contact form">
			<input type="hidden" name="access_key" value="96e6da2b-7be4-4320-9782-e3b525a20134" />
			<div class="form-group">
				<label for="name">Name</label>
				<input type="text" id="name" name="name" required />
			</div>

			<div class="form-group">
				<label for="email">Email</label>
				<input type="email" id="email" name="email" required />
			</div>

			<div class="form-group">
				<label for="message">Message</label>
				<textarea id="message" name="message" rows="5" required></textarea>
			</div>

			<button type="submit">Send Message</button>
		</form>
	</div>
</Layout>

<style>
	.contact-container {
		max-width: 1000px;
		margin: 0 auto;
		padding: 1rem;
		display: grid;
		gap: 2rem;
	}

	.contact-info {
		padding: 0;
	}

	.contact-info h2 {
		margin-top: 0;
		font-size: 2rem;
		margin-bottom: 1.5rem;
	}

	.contact-info ul {
		list-style: none;
		padding: 0;
		margin: 0;
	}

	.contact-info li {
		margin-bottom: 1rem;
	}

	.contact-info a {
		color: var(--accent);
		text-decoration: none;
		margin-left: 0.5rem;
	}

	.contact-info a:hover {
		text-decoration: underline;
	}

	.contact-form {
		display: grid;
		gap: 1.5rem;
	}

	.form-group {
		display: grid;
		gap: 0.5rem;
	}

	label {
		font-weight: 500;
	}

	input, textarea {
		padding: 0.75rem;
		border: 1px solid var(--accent);
		border-radius: 4px;
		background: rgb(var(--purple));
		color: var(--gray-100);
		font-size: 1rem;
	}

	input:focus, textarea:focus {
		outline: 2px solid var(--accent);
		outline-offset: 2px;
	}

	button {
		padding: 0.75rem 1.5rem;
		background: var(--accent-dark);
		color: white;
		border: none;
		border-radius: 4px;
		font-size: 1rem;
		cursor: pointer;
		transition: background-color 0.2s;
	}

	button:hover {
		background: var(--accent);
		color: rgb(var(--purple-dark));
	}

	/* Tablet and up */
	@media screen and (min-width: 768px) {
		.contact-container {
			max-width: 1000px;
			padding: 1rem;
			display: grid;
			grid-template-columns: 2fr 2fr;
			gap: 2rem;
		}

		.contact-info {
			margin-bottom: 0;
		}

		button {
			width: auto;
		}
	}

	/* Desktop */
	@media screen and (min-width: 1024px) {
		.contact-container {
			padding: 1rem;
		}
	}

	@media screen and (max-width: 600px) {
		.prose {
			width: 100% !important; 
		}
	}
</style>
