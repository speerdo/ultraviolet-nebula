---
import BaseLayout from "../layouts/BaseLayout.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import Expertise from "../components/HomePage/Expertise.astro";
import Work from "../components/HomePage/Work.astro";
import Experience from "../components/HomePage/Experience.astro";
---

<BaseLayout title={SITE_TITLE} description={SITE_DESCRIPTION}>
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Person",
      "name": "Adam Speer",
      "jobTitle": "AI & Automation Engineer",
      "description": "Senior full-stack engineer specializing in AI-powered workflow automation",
      "url": "https://adamspeerweb.dev",
      "sameAs": [
        "https://linkedin.com/in/adam-speer",
        "https://github.com/speerdo"
      ],
      "knowsAbout": [
        "AI Integration",
        "Workflow Automation",
        "React",
        "TypeScript",
        "Node.js",
        "OpenAI",
        "Anthropic Claude",
        "Google Gemini"
      ]
    }
  </script>
  <main>
    <article>
        <section id="header" class="section header-background">
        <div class="text-container">
          <h1 class="header-title">
            <span class="header-title-highlight">Adam</span> Speer
          </h1>
          <h2 class="header-subtitle">
            AI & Workflow Automation Engineer
          </h2>
          <h3 class="header-tagline">
            Building intelligent systems that eliminate manual work
          </h3>
          <p class="header-intro">
            I'm a senior full-stack engineer specializing in AI-powered automation solutions. 
            I build systems that reduce manual processes by up to 90% while maintaining high 
            accuracy, using React, TypeScript, Node.js, and modern AI APIs (OpenAI, Anthropic, Google).
          </p>
          <a href="/contact" class="header-cta">Currently open to new opportunities &rarr;</a>
        </div>
      </section>
      <Expertise />
      <Work />
      <Experience />
      <section class="section cta-section">
        <div class="cta-container">
          <h2 class="section-title">
            Need an AI Automation Engineer?
          </h2>
          <p class="cta-description">
            I build intelligent systems that eliminate manual work and deliver measurable ROI. 
            Whether you need to automate workflows, integrate AI into your application, or 
            optimize complex business processes, I can help.
          </p>
          <div class="cta-results">
            <p class="cta-results-title">Recent results:</p>
            <ul class="cta-results-list">
              <li>90%+ reduction in manual processes</li>
              <li>97% accuracy in AI verification systems</li>
              <li>Solutions adopted by 15+ engineers at Fortune 500 companies</li>
            </ul>
          </div>
          <p class="cta-availability">Currently accepting new projects and full-time opportunities.</p>
          <div class="cta-buttons">
            <a href="/contact" class="cta-button">Let's Work Together →</a>
            <a href="/pdf/Adam_Speer_2026.pdf" target="_blank" class="cta-button cta-button-secondary">Download Resume</a>
          </div>
        </div>
      </section>
    </article>
  </main>
</BaseLayout>

<style>
  .main {
    width: 100%;
  }

  .header-background {
    position: relative;
    width: 100%;
    height: 85vh;
    background: url("/images/bkg_ply.png") no-repeat center center;
    background-size: cover;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  .text-container {
    position: relative;
    color: white;
    text-align: center;
    max-width: 50%;
  }

  .header-title {
    font-size: 8rem;
    font-weight: 700;
    margin: 0;
    line-height: 1;
  }

  .header-title-highlight {
    font-weight: 400;
  }

  .header-subtitle {
    font-size: 3.2rem;
    font-weight: 400;
    margin: 1rem 0;
  }

  .header-tagline {
    font-size: 1.8rem;
    font-weight: 300;
    margin: 0.5rem 0 1.5rem 0;
    opacity: 0.9;
  }

  .header-intro {
    font-size: 1.2rem;
    line-height: 1.6;
    margin: 0 auto 1.5rem;
    max-width: 600px;
    opacity: 0.9;
  }

  .header-cta {
    display: inline-block;
    padding: 0.8rem 1.5rem;
    font-size: 1.1rem;
    color: white;
    background-color: transparent;
    border: 1px solid white;
    border-radius: 8px;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .header-cta:hover {
    background-color: white;
    color: #1a1a1a;
  }

  @media screen and (max-width: 768px) {
    .header-title {
      font-size: 4rem;
    }
    .header-subtitle {
      font-size: 2rem;
    }
    .header-tagline {
      font-size: 1.2rem;
    }
    .header-intro {
      font-size: 1rem;
    }
    .text-container {
      max-width: 90%;
    }
    .header-background {
      height: auto;
      min-height: 85vh;
      padding: 2rem 0;
    }
  }

  .cta-section {
    width: 100%;
    margin: 0 auto;
    padding: 6rem 1rem;
    text-align: center;
    background-color: transparent;
  }

  .cta-container {
    width: 100%;
    max-width: 900px;
    margin: 0 auto;
    padding: 3rem 2rem;
    border: 1px solid #f8fafc;
    border-radius: 8px;
    transition: all 0.3s ease;
  }

  .cta-container:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
  }

  .section-title {
    font-size: 3rem;
    font-weight: 400;
    margin: 0 0 2rem 0;
    color: var(--white);
  }

  .cta-description {
    font-size: 1.2rem;
    line-height: 1.6;
    margin: 0 auto 2rem;
    max-width: 600px;
    color: #f8fafc;
  }

  .cta-button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem 2rem;
    font-size: 1.2rem;
    font-weight: 400;
    color: var(--white);
    background-color: transparent;
    border: 1px solid #f8fafc;
    border-radius: 8px;
    transition: all 0.3s ease;
    text-decoration: none;
  }

  .cta-button:hover {
    background-color: #f8fafc;
    color: #1a1a1a;
    transform: translateY(-2px);
  }

  .cta-buttons {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    justify-content: center;
  }

  .cta-button-secondary {
    background-color: transparent;
    border-color: rgba(248, 250, 252, 0.5);
  }

  .cta-results {
    margin: 2rem auto;
    max-width: 500px;
    text-align: left;
  }

  .cta-results-title {
    font-size: 1.1rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: #f8fafc;
  }

  .cta-results-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .cta-results-list li {
    font-size: 1rem;
    line-height: 1.8;
    color: #f8fafc;
    padding-left: 1.5rem;
    position: relative;
  }

  .cta-results-list li::before {
    content: "•";
    position: absolute;
    left: 0;
    color: var(--accent, #60a5fa);
  }

  .cta-availability {
    font-size: 1.1rem;
    margin: 1.5rem 0 2rem;
    color: #f8fafc;
    font-style: italic;
  }

  @media screen and (min-width: 768px) and (max-width: 1023px) {
    .cta-section {
      padding: 4rem 2rem;
    }

    .section-title {
      font-size: 3.5rem;
    }

    .cta-description {
      font-size: 1.3rem;
    }

    .cta-button {
      font-size: 1.3rem;
    }
  }

  @media screen and (min-width: 1024px) {
    .cta-section {
      padding: 6rem 0;
    }

    .section-title {
      font-size: 4rem;
    }

    .cta-description {
      font-size: 1.5rem;
    }

    .cta-button {
      font-size: 1.4rem;
      padding: 1.2rem 2.5rem;
    }
  }
</style>
