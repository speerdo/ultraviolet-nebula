---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import Expertise from "../components/HomePage/Expertise.astro";
import Work from "../components/HomePage/Work.astro";
import Experience from "../components/HomePage/Experience.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Person",
        "name": "Adam Speer",
        "url": "https://adamspeerweb.dev",
        "jobTitle": "Web Developer",
        "worksFor": {
          "@type": "Organization",
          "name": "Self-Employed"
        },
        "sameAs": [
          "https://linkedin.com/in/adam-speer/",
          "https://github.com/speerdo"
        ]
      }
    </script>
  </head>
  <body>
    <Header />
    <main>
      <article>
        <section id="header" class="section header-background">
          <div class="text-container">
            <h1 class="header-title">
              <span class="header-title-highlight">Adam</span> Speer
            </h1>
            <h2 class="header-subtitle">
              Full Stack Developer | Software Engineer
            </h2>
          </div>
        </section>
        <Expertise />
        <Work />
        <Experience />
        <section class="section cta-section">
          <div class="cta-container">
            <h2 class="section-title">
              Need a Senior Developer You Can Rely On?
            </h2>
            <p class="cta-description">
              With over 7 years of experience, I build blazing-fast, scalable
              apps using Next.js, Nuxt, WordPress, and more. Let's build
              something great.
            </p>
            <a href="/contact" class="cta-button">Let's Work Together â†’</a>
          </div>
        </section>
      </article>
    </main>
    <Footer />
  </body>
</html>

<style>
  .main {
    width: 100%;
  }

  .header-background {
    position: relative;
    width: 100%;
    height: 85vh;
    background: url("/images/bkg_ply.png") no-repeat center center;
    background-size: cover;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  .text-container {
    position: relative;
    color: white;
    text-align: center;
    max-width: 50%;
  }

  .header-title {
    font-size: 8rem;
    font-weight: 700;
    margin: 0;
    line-height: 1;
  }

  .header-title-highlight {
    font-weight: 400;
  }

  .header-subtitle {
    font-size: 3.2rem;
    font-weight: 400;
    margin: 1rem 0;
  }

  @media screen and (max-width: 768px) {
    .header-title {
      font-size: 4rem;
    }
    .header-subtitle {
      font-size: 2rem;
    }

    .header-background {
      height: 60vh;
    }
  }

  .cta-section {
    width: 100%;
    margin: 0 auto;
    padding: 6rem 1rem;
    text-align: center;
    background-color: transparent;
  }

  .cta-container {
    width: 100%;
    max-width: 900px;
    margin: 0 auto;
    padding: 3rem 2rem;
    border: 1px solid #f8fafc;
    border-radius: 8px;
    transition: all 0.3s ease;
  }

  .cta-container:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
  }

  .section-title {
    font-size: 3rem;
    font-weight: 400;
    margin: 0 0 2rem 0;
    color: var(--white);
  }

  .cta-description {
    font-size: 1.2rem;
    line-height: 1.6;
    margin: 0 auto 2rem;
    max-width: 600px;
    color: #f8fafc;
  }

  .cta-button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem 2rem;
    font-size: 1.2rem;
    font-weight: 400;
    color: var(--white);
    background-color: transparent;
    border: 1px solid #f8fafc;
    border-radius: 8px;
    transition: all 0.3s ease;
    text-decoration: none;
  }

  .cta-button:hover {
    background-color: #f8fafc;
    color: #1a1a1a;
    transform: translateY(-2px);
  }

  @media screen and (min-width: 768px) and (max-width: 1023px) {
    .cta-section {
      padding: 4rem 2rem;
    }

    .section-title {
      font-size: 3.5rem;
    }

    .cta-description {
      font-size: 1.3rem;
    }

    .cta-button {
      font-size: 1.3rem;
    }
  }

  @media screen and (min-width: 1024px) {
    .cta-section {
      padding: 6rem 0;
    }

    .section-title {
      font-size: 4rem;
    }

    .cta-description {
      font-size: 1.5rem;
    }

    .cta-button {
      font-size: 1.4rem;
      padding: 1.2rem 2.5rem;
    }
  }
</style>
