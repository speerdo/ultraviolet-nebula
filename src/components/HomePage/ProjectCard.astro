---
const { project } = Astro.props;
---

<div class="project-card" style={`background-image: url(${project.image})`}>
  <div class="card-content">
    <h3 class="project-title">{project.title}</h3>
    <p class="project-description">{project.description}</p>
    <a
      href={project.link}
      target="_blank"
      rel="noopener noreferrer"
      class="project-link"
    >
      View Project
    </a>
  </div>
</div>

<style>
  .project-card {
    @apply relative w-80 h-96 rounded-lg shadow-lg bg-cover bg-center;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  .project-card:hover {
    transform: scale(1.03);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.3);
  }
  
  .card-content {
    @apply absolute inset-0 bg-black bg-opacity-40 flex flex-col justify-center items-center p-4 text-white;
    transition: background-color 0.3s ease;
  }
  .project-card:hover .card-content {
    background-color: rgba(0, 0, 0, 0.6);
  }

  .project-title {
    @apply text-2xl font-bold mb-2;
  }
  .project-description {
    @apply text-base mb-4;
  }
  .project-link {
    @apply text-purple-400 hover:underline;
  }

  .projects-grid {
    @apply grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-7xl mx-auto justify-items-center;
  }
</style>
