---
import BaseLayout from "./BaseLayout.astro";

interface Props {
  title: string;
  description: string;
  heroImage?: string;
}

const { title, description, heroImage } = Astro.props;
---

<BaseLayout title={title} description={description}>
  <main class="blog-post">
    <article>
      <div class="hero-image">
        {heroImage && <img width={1020} height={510} src={heroImage} alt="" />}
      </div>
      <div class="prose">
        <div class="title">
          <h1>{title}</h1>
          <hr />
        </div>
        <slot />
      </div>
    </article>
  </main>
</BaseLayout>

<style>
  .blog-post {
    width: 100%;
    max-width: 100%;
    margin: 10rem auto 0;
  }
  .hero-image {
    width: 100%;
  }
  .hero-image img {
    display: block;
    margin: 0 auto;
    border-radius: 12px;
    box-shadow: var(--box-shadow);
  }
  .prose {
    width: 75%;
    max-width: calc(100% - 2em);
    margin: auto;
    padding: 1em;
    color: #f8fafc;
  }
  .title {
    margin-bottom: 1em;
    padding: 1em 0;
    text-align: center;
    line-height: 1;
  }
  .title h1 {
    margin: 0 0 0.5em 0;
  }
  .date {
    margin-bottom: 0.5em;
    color: rgb(var(--gray));
  }
  .last-updated-on {
    font-style: italic;
  }

  @media screen and (max-width: 768px) {
    .blog-post {
      margin: 7rem auto 0;
    }
    main {
      padding: 1rem;
    }
    .prose {
      width: 100%;
      max-width: 100%;
      padding: 2rem;
    }
  }
</style>
