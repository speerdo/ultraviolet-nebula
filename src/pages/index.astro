---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import Expertise from "../components/HomePage/Expertise.astro";
import Work from "../components/HomePage/Work.astro";
import Experience from "../components/HomePage/Experience.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Person",
        "name": "Adam Speer",
        "url": "https://adamspeerweb.dev",
        "jobTitle": "Web Developer",
        "worksFor": {
          "@type": "Organization",
          "name": "Self-Employed"
        },
        "sameAs": [
          "https://linkedin.com/in/adam-speer/",
          "https://github.com/speerdo"
        ]
      }
    </script>
  </head>
  <body>
    <Header />
    <main>
      <article>
        <section id="header" class="section header-background">
          <div class="text-container">
            <h1 class="header-title">
              <span class="header-title-highlight">Adam</span> Speer
            </h1>
            <h2 class="header-subtitle">
              Full Stack Developer | Software Engineer
            </h2>
          </div>
        </section>
        <Expertise />
        <Work />
        <Experience />
      </article>
    </main>
    <Footer />
  </body>
</html>

<style>
  .main {
    width: 100%;
  }

  .header-background {
    position: relative;
    width: 100%;
    height: 85vh;
    background: url("/images/bkg_ply.png") no-repeat center center;
    background-size: cover;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  .text-container {
    position: relative;
    color: white;
    text-align: center;
    max-width: 50%;
  }

  .header-title {
    font-size: 8rem;
    font-weight: 700;
    margin: 0;
    line-height: 1;
  }

  .header-title-highlight {
    font-weight: 400;
  }

  .header-subtitle {
    font-size: 3.2rem;
    font-weight: 400;
    margin: 1rem 0;
  }

  @media screen and (max-width: 768px) {
    .header-title {
      font-size: 4rem;
    }
    .header-subtitle {
      font-size: 2rem;
    }

    .header-background {
      height: 60vh;
    }
  }
</style>
