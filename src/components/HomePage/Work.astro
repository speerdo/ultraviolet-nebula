---
import WorkCard from './WorkCard.astro';

// Keep your projects list in Astro frontmatter
const projects = [
  {
    title: 'Viewfinder Media',
    description: 'A showcase of my work and experience.',
    image: '/public/viewfinder.png',
    link: 'https://viewfinder.media',
  },
  {
    title: 'Advanced Agrilytics',
    description: 'A fully functional e-commerce platform with React.',
    image: '/public/adag.png',
    link: 'https://advancedagrilytics.com/',
  },
  {
    title: 'Mounjaro (Eli Lilly)',
    description: 'A custom blog platform powered by Node.js and MongoDB.',
    image: '/public/mounjaro.png',
    link: 'https://mounjaro.lilly.com',
  },
  {
    title: 'Salesforce.org',
    description: 'A showcase of my work and experience.',
    image: '/public/sfdo.png',
    link: 'https://www.salesforce.com/nonprofit/',
  },
  {
    title: 'Indiana Agriculture Nutrient Alliance',
    description: 'A fully functional e-commerce platform with React.',
    image: '/public/iana.png',
    link: 'https://keepitmidwest.com/',
  },
  {
    title: 'Adam Speer Web Dev',
    description: 'A custom blog platform powered by Node.js and MongoDB.',
    image: '/public/adamspeerwebdev.png',
    link: 'https://adamspeerweb.dev',
  },
];
---

<section id="work" class="work-section">
  <h2 class="section-title">My Work</h2>
  <div class="projects-grid">
    {projects.map((project) => (
      <WorkCard project={project} />
    ))}
  </div>
</section>

<style>
  .work-section {
    @apply py-16 px-4;
  }

  .section-title {
    font-size: 4rem;
    font-weight: 400;
    text-align: center;
    margin-bottom: 3rem;
  }

  .projects-grid {
    @apply grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-7xl mx-auto justify-items-center;
  }
</style>
